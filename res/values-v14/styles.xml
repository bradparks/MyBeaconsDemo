<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <!-- API 14 theme customizations can go here. -->
    </style>
    
    <style name="body">
        <item name="android:background">@drawable/app_background</item>
    </style>
    <style name="mainAppName">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#FF7619</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="label">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#E2E2E2</item>
    </style>
    <style name="textfield">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#808080</item>
    </style>
    <style name="textfieldbig">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">76sp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
