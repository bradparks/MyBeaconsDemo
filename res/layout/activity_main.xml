<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    style="@style/body">
    <!-- App Name -->
    <TextView
        android:id="@+id/am_tv_main_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_app_name" 
        style="@style/mainAppName"/>
    <!-- End App Name -->
    
    <!-- Region -->
    <TextView 
        android:id="@+id/am_tv_region_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/am_tv_main_app_name"
        android:text="@string/region_label"
        style="@style/label"/>
    <TextView 
        android:id="@+id/am_tv_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/am_tv_region_label"
        android:text="@string/region_name"
        style="@style/textfield"/>
    <!-- End Region -->
    
    <!-- Status -->
    <TextView 
        android:id="@+id/am_tv_distance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/am_tv_region"
        android:text="@string/distance_label"
        style="@style/label"/>
    <TextView 
        android:id="@+id/am_tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/am_tv_distance_label"
        style="@style/textfieldbig"/>
    <!-- End Status -->

</RelativeLayout>
